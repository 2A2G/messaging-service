generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model TemplateEmail {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  type        String
  body        String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model SMTP {
  id         String @id @default(auto()) @map("_id")
  host       String
  port       Int
  username   String
  password   String
  secure     Boolean
  createdAt  DateTime @default(now())
}

model Email {
  id         String   @id @default(auto()) @map("_id")
  to         String
  subject    String
  body       String
  smtpId     String   // Relaci√≥n con el servidor SMTP usado
  sentAt     DateTime @default(now())
  status     String  
  error      String? 
}
